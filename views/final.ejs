<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta
        name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

        <title>E-Commerce-CQ</title>
    </head>
    <style>
        body {
            background-image: linear-gradient(90deg,#000154,#9596d8);
        }
        body::-webkit-scrollbar {
            display: none;
        }
        .my-font {
            color: white;
            font-family: Georgia, 'Times New Roman', Times, serif;
        }
        .my-list {
            background-color: #000154;
            color: white;
            font-family: initial;
        }
        .my-modal {
            justify-content: space-evenly;
        }
        .my-modal button {
            margin-bottom: 2vh;
        }
        .font{
            font-size: 17px;
            padding: 2px;
            padding-left: 16px;
            font-family: monospace;
        }
        h3{
            padding-left: 17px;
        }
        .font-order{
            font-size: 17px;
            padding: 2px;
            padding-left: 16px;
            font-family: monospace;
            color: white;
        }
        @media only screen and (max-width: 600px) {
            body {
                background-image: linear-gradient(90deg,#000154,#9596d8);
            }
            .w-50 {
                width: 80% !important;
            }
            .changeDir {
                flex-direction: column;
            }
            .modal {
                width: 100%;
                height: 100%;
            }
            .modal-content {
                width: 100%;
            }
            .myOnSmall{
                margin-bottom: 5px;
            }
        }
    </style>
    <body>
        <div class="container d-flex justify-content-center font-order"><h1>Ordered Products</h1></div>
        <div class="container d-flex justify-content-center font-order">
            <h3>Thank you for Choosing Pur-Chase.com ðŸ˜Š</h3>
        </div>
        <% if(products.length>0){ %>
            <div class="container-fluid my-5" id="originalCart">
                <div class="row mx-5" id="originalCart">
                    <% products.forEach((p)=>{  %>
                        <div class="mx-2 my-2">
                            <div class="card border border-warning" style="width: 15rem;">
                                <img src="<%= p.image %>" class="card-img-top" alt="<%= p.image %>" height="200" style="padding: 5vh;">
                                <% if(p.inStock){ %>
                                    <div class="card-body">
                                        <h5 class="card-title"><%= p.name %></h5>
                                        <h5 class="card-title">$
                                            <%= p.price %></h5>
                                        <span>Quantity:-</span>
                                        <span id="quantity">
                                            <%= p.quant %></span>
                                    </div>
                                <% }else{%>
                                    <p class="font">This product is not ordered</p>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            <% }%>
            <div class="container d-flex justify-content-center"><a href="/cart"><button class="btn btn-primary">Go to Cart page</button></a></div>
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    </body>
</html>
